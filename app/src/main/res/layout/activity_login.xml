<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background11"
    tools:context="com.wisnu.britest.LoginActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="20dp"
        android:elevation="20dp"
        app:cardElevation="20dp"
        android:layout_gravity="center">

        <LinearLayout
            style="@style/ButtonPrimaryApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="30dp"
            android:background="@color/colorTextButton"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etNid"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:hint="@string/username"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#000000"
                android:maxLength="10"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/etOfficeId"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="number"
                android:hint="@string/password"
                android:textAlignment="center"
                android:maxLength="10"
                android:textColorHint="#040202" />

            <Button
                android:id="@+id/btnLogin"
                style="@style/ButtonPrimaryApp"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="29dp"
                android:text="LOGIN"
                android:textColor="@color/colorTextButton" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>